<%= render GateCarouselComponent.new do %>
  <%= gate_set do %>
    <%= gate_carousel_dropzone do %>
      <h-gate class="operation-xl"></h-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <x-gate class="operation-xl"></x-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <y-gate class="operation-xl"></y-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <z-gate class="operation-xl"></z-gate>
    <% end %>
  <% end %>

  <%= gate_set do %>
    <%= gate_carousel_dropzone do %>
      <phase-gate class="operation-xl angle-hidden" data-angle="π/2"></phase-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <t-gate class="operation-xl"></t-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <rnot-gate class="operation-xl"></rnot-gate>
    <% end %>
  <% end %>

  <%= gate_set do %>
    <%= gate_carousel_dropzone do %>
      <rx-gate class="operation-xl angle-hidden" data-angle="π/2"></rx-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <ry-gate class="operation-xl angle-hidden" data-angle="π/2"></ry-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <rz-gate class="operation-xl angle-hidden" data-angle="π/2"></rz-gate>
    <% end %>
  <% end %>

  <%= gate_set do %>
    <%= gate_carousel_dropzone do %>
      <control-gate class="operation-xl"></control-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <swap-gate class="operation-xl"></swap-gate>
    <% end %>
  <% end %>

  <%= gate_set do %>
    <%= gate_carousel_dropzone do %>
      <write-gate data-value="0" class="operation-xl"></write-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <write-gate data-value="1" class="operation-xl"></write-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <measurement-gate class="operation-xl"></measurement-gate>
    <% end %>
    <%= gate_carousel_dropzone do %>
      <bloch-display class="operation-xl"></bloch-display>
    <% end %>
  <% end %>
<% end %>
