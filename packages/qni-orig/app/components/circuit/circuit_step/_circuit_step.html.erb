<% circuit_step = local_assigns.fetch(:circuit_step) %>

<%= tag.div class: class_string('circuit-step',
                                'circuit-step--shadow' => circuit_step.shadow?,
                                'circuit-step--shadow-source' => circuit_step.shadow_source?),
            data: { action: 'mouseenter->simulator#circuitStepMouseEntered mouseleave->simulator#circuitStepMouseLeave click->simulator#circuitStepClicked',
                    target: 'circuit.step simulator.circuitStep' } do %>
  <div class="circuit-step__body">
    <%= circuit_step.content %>
  </div>
  <%= circuit_breakpoint %>
<% end %>
