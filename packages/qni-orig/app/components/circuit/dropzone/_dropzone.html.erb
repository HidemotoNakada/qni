<% dropzone = local_assigns.fetch(:dropzone) %>

<%= tag.div class: class_string('dropzone',
                                dropzone.klass,
                                'dropzone--circuit' => dropzone.circuit?,
                                'dropzone--palette' => dropzone.palette?,
                                'dropzone--trash' => dropzone.trash?,
                                'dropzone--occupied' => dropzone.occupied?,
                                'wireable--inactive' => !dropzone.wire_active?,
                                'wireable--input-inactive' => !dropzone.input_wire_active?,
                                'wireable--output-inactive' => !dropzone.output_wire_active?,
                                'connectable--lower-bit' => dropzone.wire_top?,
                                'connectable--upper-bit' => dropzone.wire_bottom?) do %>
  <%= dropzone.content %>
  <%= wires unless dropzone.no_wire? %>
<% end %>
