<%= tag.div class: class_string('circuit-step',
                                'circuit-step--shadow' => @shadow,
                                'circuit-step--shadow-source' => @shadow_source),
            data: { action: 'mouseenter->simulator#showStateVector:passive click->simulator#activateBreakpoint:passive',
                    target: 'circuit.step simulator.circuitStep' } do %>
  <div class="circuit-step__body">
    <%= content %>
  </div>
  <%= render Circuit::CircuitBreakpointComponent.new %>
<% end %>
