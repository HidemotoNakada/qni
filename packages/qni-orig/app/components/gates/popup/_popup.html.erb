<% popup = local_assigns.fetch(:popup) %>

<div id="gate-popup--<%= popup.type %>" class="gate-popup hidden">
  <div class="flex flex-col px-1 py-1">
    <label for="<%= popup.type %>" class="block text-sm font-medium text-white"><%= popup.label %></label>
    <div class="mt-1">
      <input class="gate-popup__input" type="text" name="<%= popup.type %>">
      <div class="gate-popup__error-icon absolute inset-y-0 right-0 pr-6 flex items-center pointer-events-none">
        <%= exclamation_circle_icon %>
      </div>
    </div>
    <p class="gate-popup__input-error"><%= popup.error_message %></p>
  </div>
</div>
