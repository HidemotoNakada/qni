<% popup = local_assigns.fetch(:popup) %>

<div class="gate-popup hidden" data-target="gate-popup.content">
  <div class="flex flex-col px-2 py-4">
    <label class="block text-gray-700 text-sm font-bold mb-2"><%= popup.label %></label>
    <input class="gate-popup__input" type="text">
    <p class="gate-popup__input-error invisible"><%= popup.error_message %></p>
  </div>
</div>
