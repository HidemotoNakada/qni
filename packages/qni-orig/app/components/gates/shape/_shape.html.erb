<% shape = local_assigns.fetch(:shape) %>

<div class="gate__shape gate__shape--<%= shape.type %>">
  <% if shape.type == 'rw' %>
    <div>
      &VerticalLine;<span class="gate__shape-label"></span>&RightAngleBracket;
    </div>
  <% elsif shape.type == 'control' %>
    <div class="control-gate__dot"></div>
  <% else %>
    <%= shape.label %>
  <% end %>
</div>
