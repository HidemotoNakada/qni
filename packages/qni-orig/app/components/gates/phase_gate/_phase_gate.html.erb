<% phase_gate = local_assigns.fetch(:phase_gate) %>

<%= tag.div class: phase_gate.klass, data: phase_gate.data do %>
  <%= connection_top %>
  <%= connection_bottom %>
  <%= gate_label text: phase_gate.theta %>
  <%= gate_label text: phase_gate.theta, bottom: true %>
  <%= gate_circle label: 'φ' %>
  <%= gate_popup label: 'theta', error_message: 'thetaの値が正しくありません' %>
<% end %>
