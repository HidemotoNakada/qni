<% readout_gate = local_assigns.fetch(:readout_gate) %>

<% label = capture do %>
  <div>
    &VerticalLine;<span class="gate__shape-label"></span>&RightAngleBracket;
  </div>
<% end %>

<%= tag.div class: 'gate readout-gate', data: readout_gate.data do %>
  <%= gate_shape label: label, type: 'square' %>
  <%= gate_label text: readout_gate.set %>
  <%= gate_label text: readout_gate.set, bottom: true %>
  <%= gate_popup label: 'set', error_message: 'setの値が正しくありません' %>
<% end %>
