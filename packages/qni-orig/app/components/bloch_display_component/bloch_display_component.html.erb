<%= tag.div class: @class, data: @data do %>
  <div class="gate__body">
    <div class="absolute inset-0 rounded-full bg-snow"></div>
    <div class="absolute inset-0 rounded-full border-2 border-hare bg-gate bg-opacity-10"></div>

    <div class="absolute inset-0" style="padding: 2px">
      <svg class="w-full h-full stroke-current text-hare" viewBox="0 0 48 48" fill="none" stroke-width="1">
        <line x1="0%" y1="50%" x2="100%" y2="50%" />
        <line x1="50%" y1="0%" x2="50%" y2="100%" />
        <line x1="32%" y1="70%" x2="68%" y2="30%" />

        <ellipse cx="50%" cy="50%" rx="18%" ry="50%" />
        <ellipse cx="50%" cy="50%" rx="50%" ry="18%" />
      </svg>
    </div>

    <div class="absolute inset-0">
      <div class="bloch-display__perspective">
        <div class="bloch-display__vector">
          <div class="bloch-display__vector-line">
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(0deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(20deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(40deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(60deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(80deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(100deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(120deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(140deg)"></div>
            <div class="bloch-display__vector-line-rect" style="transform: rotateY(160deg)"></div>
          </div>

          <div class="bloch-display__vector-end">
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(0deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(20deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(40deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(60deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(80deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(100deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(120deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(140deg)"></div>
            <div class="bloch-display__vector-end-circle" style="transform: rotateY(160deg)"></div>

            <div class="bloch-display__vector-end-circle" style="transform: rotateX(90deg)"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
