<% qubit_circle = local_assigns.fetch(:qubit_circle) %>

<%= tag.div id: qubit_circle.id,
            class: class_string('qubit-circle',
                                qubit_circle.klass,
                                ["qubit-circle--magnitude-#{qubit_circle.magnitude}", 'qubit-circle--magnitude-0'] => qubit_circle.magnitude,
                                "qubit-circle--phase-#{qubit_circle.phase}" => qubit_circle.phase),
            data: { circle_notation_target: 'qubitCircle',
                    action: 'mouseenter->circle-notation#setPopupContent' } do %>
  <div class="qubit-circle__magnitude"></div>
  <div class="qubit-circle__phase"></div>
<% end %>
