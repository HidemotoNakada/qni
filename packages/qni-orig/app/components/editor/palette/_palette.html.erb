<% palette = local_assigns.fetch(:palette) %>

<div id="palette" class="palette absolute top-0 left-0 rounded-md bg-white mt-8 border-2 border-gray-200 shadow-lg z-40">
  <%= dropzone trash: true, no_wire: true do %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= write 1 %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= hadamard_gate popup: false %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= not_gate popup: false %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= phase_gate theta: 'Ï€/2', popup: false %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= control_gate %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= swap_gate %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= root_not_gate popup: false %>
      <% end %>
    <% end %>
    <%= dropzone palette: true, no_wire: true do %>
      <%= draggable palette: true do %>
        <%= readout popup: false %>
      <% end %>
    <% end %>
  <% end %>
</div>
