<% circuit_card = local_assigns.fetch(:circuit_card) %>
<% circuit = circuit_card.circuit %>

<%= component 'tailwind_ui/card', klass: 'circuit-card shadow-none' do %>
  <%= component 'tailwind_ui/card/header' do %>
    <div class="flex justify-between items-center">
      <h3 class="font-regular text-base md:text-xl lg:text-lg leading-snug truncate">
        <%= circuit.name %>
      </h3>

      <div class="flex flex-shrink-0 items-center ml-4">
        <%= link_to 'Open', circuit, type: 'button', class: 'hidden md:inline button button--secondary' %>
      </div>
    </div>
  <% end %>

  <div class="border-b-2 border-swan mx-6 md:mx-4"></div>

  <%= component 'tailwind_ui/card/body' do %>
    <%= link_to circuit_path(circuit), class: 'circuit-card__clickable' do %>
      <%= circuit_thumbnail circuit: circuit %>
    <% end %>
  <% end %>
<% end %>
