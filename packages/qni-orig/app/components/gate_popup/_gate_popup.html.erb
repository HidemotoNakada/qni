<% gate_popup = local_assigns.fetch(:gate_popup) %>

<div id="gate-popup--<%= gate_popup.type %>" class="gate-popup hidden">
  <div class="flex flex-col px-2 py-4">
    <div class="gate-popup__input-wrapper">  <!-- focus-within:ring-1 focus-within:ring-magnitude focus-within:border-magnitude"> -->
      <label for="<%= gate_popup.type %>" class="absolute -top-2 left-2 -mt-px inline-block px-1 bg-snow text-sm font-medium text-eel"><%= gate_popup.label %></label>
      <div class="relative">
        <input type="text" name="<%= gate_popup.type %>" class="gate-popup__input" autocomplete="off">
        <div class="gate-popup__error-icon absolute inset-y-0 right-0 flex items-center pointer-events-none">
          <%= exclamation_circle_icon %>
        </div>
      </div>
    </div>
    <p class="gate-popup__input-error"><%= gate_popup.error_message %></p>
    <%= angle_slider %>
  </div>
</div>
