<% control_dot = local_assigns.fetch(:control_dot) %>

<%= tag.div class: class_string('circuit-element', 'gate', 'control-dot', 'circuit-element--inactive-wire' => !control_dot.wire_active?), data: { targets: control_dot.targets.join(', ') } do %>
  <%= circuit_element_wire %>
  <%= top_wire if control_dot.top? %>
  <%= bottom_wire if control_dot.bottom? %>
  <div class="control-dot__dot"></div>
  <%= tag.div(control_dot.label, class: 'circuit-element__label') if control_dot.label %>
<% end %>
