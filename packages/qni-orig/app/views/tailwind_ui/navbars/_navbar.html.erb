<% title = local_assigns.fetch(:title, nil) %>

<nav class="fixed top-0 left-0 right-0 z-20 bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 lg:px-8">
    <div class="relative flex justify-between h-16">
      <div class="flex-1 flex items-stretch justify-start">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to circuits_path, class: 'block flex items-center justify-center w-8 h-8 rounded bg-indigo-900' do %>
            <span class="text-xl md:text-2xl font-serif font-black text-white leading-none">Q</span>
          <% end %>
          <% if title %>
            <div class="ml-2"><%= @circuit.name %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
