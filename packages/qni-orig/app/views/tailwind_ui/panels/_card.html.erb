<% body = yield.presence || raise('body is a mandatory') %>
<% klass = local_assigns.fetch(:class, nil) %>
<% data = local_assigns.fetch(:data, nil) %>

<%= tag.div class: class_string('border-b border-t border-gray-200 sm:border sm:rounded-lg overflow-hidden', klass => klass), data: data do %>
  <%= body %>
<% end %>
