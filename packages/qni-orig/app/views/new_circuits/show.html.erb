<quantum-simulator>
  <div id="palette" class="hidden md:flex flex-row space-x-2 absolute top-0 let-0 mt-14 mx-6 px-4 py-5 bg-snow rounded-md border-2 border-b-4 border-swan">
    <palette-dropzone>
      <h-gate>
        <header>
          <h1>Hadamard Gate</h1>
          <p>Creates simple superpositions.</p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <h-gate data-size="sm"></h-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <h-gate data-size="sm"></h-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7" data-phases="0,180"></circle-notation>
        </div>
      </h-gate>
    </palette-dropzone>

    <palette-dropzone>
      <x-gate>
        <header>
          <h1>NOT Gate (Pauli X Gate)</h1>
          <p>Swaps the qubit pair of <code>|0⟩</code> and <code>|1⟩</code>.</p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <x-gate data-size="sm"></x-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0,1"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <x-gate data-size="sm"></x-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0.9,0.4" data-phases="340,70"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <x-gate data-size="sm"></x-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.4,0.9" data-phases="70,340"></circle-notation>
        </div>
      </x-gate>
    </palette-dropzone>

    <palette-dropzone>
      <y-gate>
        <header>
          <h1>Pauli Y Gate</h1>
          <p>The combination of the X and Z gates.</p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <y-gate data-size="sm"></y-gate>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="#E5E5E5">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
          <circle-notation data-magnitudes="0,1" data-phases="0,90"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <y-gate data-size="sm"></y-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-phases="-90,0"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0.9,0.4" data-phases="340,70"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <y-gate data-size="sm"></y-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.4,0.9" data-phases="160,250"></circle-notation>
        </div>
      </y-gate>
    </palette-dropzone>

    <palette-dropzone>
      <z-gate>
        <header>
          <h1>Pauli Z Gate</h1>
          <p>Negate phases when the qubit is ON.</p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <z-gate data-size="sm"></z-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <z-gate data-size="sm"></z-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0,1" data-phases="0,180"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0.9,0.4" data-phases="340,70"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <z-gate data-size="sm"></z-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.9,0.4" data-phases="340,250"></circle-notation>
        </div>
      </z-gate>
    </palette-dropzone>

    <palette-dropzone>
      <phase-gate data-phi="π/2">
        <header>
          <h1>Phase Gate</h1>
          <p>
            Applies a phase of e<sup>iφ</sup> to the |<span class="font-mono">1</span>⟩ state.
          </p>
          <p>
            The default φ = π/2.
          </p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <phase-gate data-phi="π/2" data-size="sm"></phase-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <phase-gate data-phi="π/2" data-size="sm"></phase-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0,1" data-phases="0,90"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0.9,0.4" data-phases="340,70"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <phase-gate data-phi="π/2" data-size="sm"></phase-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.9,0.4" data-phases="340,160"></circle-notation>
        </div>
      </phase-gate>
    </palette-dropzone>

    <palette-dropzone>
      <rnot-gate>
        <header>
          <h1>Square Root of NOT Gate</h1>
          <p>Rotates around the X-axis by <code>π/2</code>.</p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <rnot-gate data-size="sm"></rnot-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7" data-phases="45,-50"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <rnot-gate data-size="sm"></rnot-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7" data-phases="-50,45"></circle-notation>
        </div>
      </rnot-gate>
    </palette-dropzone>

    <palette-dropzone>
      <rx-gate data-theta="π/2">
        <header>
          <h1>Rx Gate</h1>
          <p>
            Rotates around the X-axis by the angle θ.
          </p>
          <p>
            The default θ = π/2.
          </p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <rx-gate data-theta="π/2" data-size="sm"></rx-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7" data-phases="0,-90"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <rx-gate data-theta="π/2" data-size="sm"></rx-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7" data-phases="-90,0"></circle-notation>
        </div>
      </rx-gate>
    </palette-dropzone>

    <palette-dropzone>
      <ry-gate data-theta="π/2">
        <header>
          <h1>Ry Gate</h1>
          <p>
            Rotates around the Y-axis by the angle θ.
          </p>
          <p>
            The default θ = π/2.
          </p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <ry-gate data-theta="π/2" data-size="sm"></ry-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <ry-gate data-theta="π/2" data-size="sm"></ry-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0.7,0.7" data-phases="180,0"></circle-notation>
        </div>
      </ry-gate>
    </palette-dropzone>

    <palette-dropzone>
      <rz-gate data-theta="π/2">
        <header>
          <h1>Rz Gate</h1>
          <p>
            Rotates around the Z-axis by the angle θ.
          </p>
          <p>
            The default θ = π/2.
          </p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <rz-gate data-theta="π/2" data-size="sm"></rz-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-phases="-45,0"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <rz-gate data-theta="π/2" data-size="sm"></rz-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0,1" data-phases="0,45"></circle-notation>
        </div>
      </rz-gate>
    </palette-dropzone>

    <palette-dropzone>
      <swap-gate>
        <header>
          <h1>Swap Gate</h1>
          <p>Swap the values of two qubits.</p>
          <p>(Place two in the same column.)</p>
        </header>
      </swap-gate>
    </palette-dropzone>

    <palette-dropzone>
      <control-gate>
        <header>
          <h1>Control Gate</h1>
          <p>Conditions on a qubit being ON.</p>
          <p>Gates in the same column only apply to states meeting the condition.</p>
        </header>
      </control-gate>
    </palette-dropzone>

    <palette-dropzone>
      <bloch-display>
        <header>
          <h1>Bloch Sphere Display</h1>
          <p>Shows a wire's local state as a point on the Bloch sphere.</p>
        </header>
      </bloch-display>
    </palette-dropzone>

    <palette-dropzone>
      <write-gate data-value="0">
        <header>
          <h1><code>|0⟩</code> Operation</h1>
          <p>(Re)sets a qubit to state <code>|0⟩</code>.</p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <write-gate data-value="0" data-size="sm"></write-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <write-gate data-value="0" data-size="sm"></write-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation></circle-notation>
        </div>
      </write-gate>
    </palette-dropzone>

    <palette-dropzone>
      <write-gate data-value="1">
        <header>
          <h1><code>|1⟩</code> Operation</h1>
          <p>(Re)sets a qubit to state <code>|1⟩</code>.</p>
        </header>

        <div class="mt-4 flex flex-row items-center space-x-1">
          <circle-notation></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <write-gate data-value="1" data-size="sm"></write-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0,1"></circle-notation>
        </div>

        <div class="mt-4 mb-2 flex flex-row items-center space-x-1">
          <circle-notation data-magnitudes="0,1"></circle-notation>
          <div class="flex flex-row items-center">
            <%= minus_icon %>
            <write-gate data-value="1" data-size="sm"></write-gate>
            <%= arrow_right_icon %>
          </div>
          <circle-notation data-magnitudes="0,1"></circle-notation>
        </div>
      </write-gate>
    </palette-dropzone>

    <palette-dropzone>
      <measurement-gate>
        <header>
          <h1>Measurement Gate</h1>
          <p>Measures whether a qubit is ON or OFF.</p>
        </header>
      </measurement-gate>
    </palette-dropzone>
  </div>

  <quantum-circuit class="block mt-56 md:mt-52 md:ml-6"
                   data-update-url
                   data-min-wire-count="2"
                   data-min-step-count="5">
  </quantum-circuit>

  <circle-notation id="circle-notation"
                   class="circle-notation flex flex-row justify-center fixed top-0 md:top-auto left-0 md:left-auto right-0 md:right-auto mt-12 md:mt-0 mx-6 md:mx-0 md:bottom-0 w-auto h-32 md:h-auto overflow-y-auto mb-8 bg-snow border-2 border-b-4 border-swan rounded-md md:left-1/2 md:transform md:-translate-x-1/2 z-40"
                   data-multiple-qubits>
  </circle-notation>

  <%= render RunCircuitButtonComponent.new %>
</quantum-simulator>
