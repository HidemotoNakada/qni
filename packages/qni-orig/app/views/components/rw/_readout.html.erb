<% value = local_assigns.fetch(:value) %>
<% label = local_assigns.fetch(:label, nil) %>

<%= tag.div class: "rw gate readout rw--#{value}" do %>
  <div class="rw__wire rw__wire--left"></div>
  <div class="rw__wire rw__wire--right"></div>
  <div class="rw__body">
    <div>
      |<%= tag.span value, class: 'rw__value' %>&#10217;
    </div>
  </div>
  <%= tag.div(label, class: 'gate__label') if label %>
<% end %>
