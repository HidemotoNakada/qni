<% theta = local_assigns.fetch(:theta) %>
<% top = local_assigns.fetch(:top, false) %>
<% bottom = local_assigns.fetch(:bottom, false) %>
<% wire_active = local_assigns.fetch(:wire_active, true) %>

<div class="gate phase-gate">
  <%= gate_wire active: wire_active %>
  <%= top_wire if top %>
  <%= bottom_wire if bottom %>
  <%= gate_label(label: theta) unless top %>
  <%= gate_label(label: theta, bottom: true) if top && !bottom %>
  <%= gate_circle label: 'Ï†' %>
</div>
