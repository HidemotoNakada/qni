<% theta = local_assigns.fetch(:theta) %>
<% top = local_assigns.fetch(:top, false) %>
<% bottom = local_assigns.fetch(:bottom, false) %>
<% disabled = local_assigns.fetch(:disabled, false) %>
<% wire_active = local_assigns.fetch(:wire_active, true) %>

<%= tag.div class: class_string('circuit-element', 'gate', 'phase-gate', 'gate--disabled' => disabled, 'circuit-element--inactive-wire' => !wire_active) do %>
  <%= circuit_element_wire %>
  <%= top_wire if top %>
  <%= bottom_wire if bottom %>
  <%= circuit_element_label(label: theta) unless top %>
  <%= circuit_element_label(label: theta, bottom: true) if top && !bottom %>
  <%= gate_circle label: 'Ï†' %>
<% end %>
