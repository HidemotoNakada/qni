<% theta = local_assigns.fetch(:theta) %>
<% top = local_assigns.fetch(:top, false) %>
<% bottom = local_assigns.fetch(:bottom, false) %>
<% disabled = local_assigns.fetch(:disabled, false) %>
<% wire_active = local_assigns.fetch(:wire_active, true) %>

<%= tag.div class: class_string('gate', 'phase-gate', 'gate--disabled' => disabled, 'gate--inactive-wire' => !wire_active) do %>
  <%= gate_wire active: wire_active %>
  <%= top_wire if top %>
  <%= bottom_wire if bottom %>
  <%= tag.div(theta, class: 'gate__label') unless top %>
  <%= tag.div(theta, class: 'gate__label gate__label--bottom') if top && !bottom %>
  <div class="gate__circle">Ï†</div>
<% end %>
