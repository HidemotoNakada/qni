<% top = local_assigns.fetch(:top, false) %>
<% bottom = local_assigns.fetch(:bottom, false) %>
<% label = local_assigns.fetch(:label, nil) %>
<% wire_active = local_assigns.fetch(:wire_active, true) %>

<%= tag.div class: class_string('circuit-element', 'gate', 'swap-gate', 'circuit-element--inactive-wire' => !wire_active) do %>
  <%= circuit_element_wire %>
  <%= top_wire if top %>
  <%= bottom_wire if bottom %>
  <span><%= swap %></span>
  <%= circuit_element_label label: label %>
<% end %>
