<% top = local_assigns.fetch(:top, false) %>
<% bottom = local_assigns.fetch(:bottom, false) %>
<% label = local_assigns.fetch(:label, nil) %>
<% wire_active = local_assigns.fetch(:wire_active, true) %>

<%= tag.div class: class_string('circuit-element', 'gate', 'control-dot', 'circuit-element--inactive-wire' => !wire_active) do %>
  <%= circuit_element_wire %>
  <%= top_wire if top %>
  <%= bottom_wire if bottom %>
  <div class="control-dot__dot"></div>
  <%= tag.div(label, class: 'circuit-element__label') if label %>
<% end %>
