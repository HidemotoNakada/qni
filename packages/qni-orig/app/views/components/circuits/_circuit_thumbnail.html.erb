<% circuit = local_assigns.fetch(:circuit) %>

<% cache circuit do %>
  <div class="thumbnail-container invisible"
       data-target="circuit-thumbnail.thumbnailContainer"
       data-circuit-thumbnail-name="<%= circuit.name %>">
    <%= link_to circuit_path(circuit), class: 'thumbnail block', data: { target: 'circuit-thumbnail.thumbnail' } do %>
      <iframe frameborder="0" scrolling="no"
              class="h-0"
              src="<%= circuit_preview_path(circuit) %>"
              data-target="circuit-thumbnail.iframe"
              data-action="load->circuit-thumbnail#init resize@window->circuit-thumbnail#resize"></iframe>
    <% end %>
  </div>
<% end %>
