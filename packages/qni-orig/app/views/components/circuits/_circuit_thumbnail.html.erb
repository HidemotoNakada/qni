<% circuit = local_assigns.fetch(:circuit) %>

<% cache circuit do %>
  <div class="thumbnail-container invisible"
       data-target="circuit-thumbnail.thumbnailContainer">
    <div class="thumbnail" data-target="circuit-thumbnail.thumbnail">
      <iframe frameborder="0" scrolling="no"
              class="lazy h-0"
              data-src="<%= circuit_preview_path(circuit) %>"
              data-target="circuit-thumbnail.iframe"
              data-action="iframeLazyLoad->circuit-thumbnail#iframeLazyLoad resize@window->circuit-thumbnail#resize"
              data-circuit-name="<%= circuit.name %>"></iframe>
    </div>
  </div>
<% end %>
