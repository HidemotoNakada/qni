<% value = local_assigns.fetch(:value) %>
<% klass = local_assigns[:class] %>

<%= tag.div class: class_string('write', 'write--zero' => value.zero?, 'write--one' => value == 1, klass => klass) do %>
  <div class="write__wire left-0 border-gray-200"></div>
  <div class="write__body flex justify-center items-center">
    |<%= tag.span value, class: 'write__value' %>&#10217;
  </div>
  <div class="write__wire right-0 border-gray-600"></div>
<% end %>
