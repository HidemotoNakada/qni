<% body = yield.presence || raise('body is a mandatory') %>

<% klass = local_assigns[:class] %>

<div class="<%= class_string('circuit-column', klass => klass) %>"
     data-action="click->simulator#gotoBreakpoint"
     data-target="simulator.circuitColumn">
  <div class="flex flex-col">
    <%= body %>
  </div>

  <%= circuit_breakpoint %>
</div>
