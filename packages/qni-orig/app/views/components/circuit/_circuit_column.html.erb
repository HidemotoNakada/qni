<% body = yield.presence || raise('body is a mandatory') %>

<% klass = local_assigns[:class] %>

<%= tag.div class: class_string('circuit-column', klass => klass), data: { action: 'click->simulator#gotoBreakpoint', target: 'simulator.circuitColumn' } do %>
  <div class="flex flex-col">
    <%= body %>
  </div>

  <%= circuit_breakpoint %>
<% end %>
