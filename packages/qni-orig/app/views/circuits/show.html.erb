<% content_for :head do %>
  <%= javascript_pack_tag 'service_worker', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= container do %>
  <%= editor do %>
    <%= component 'simulator', nqubit: @circuit.nqubit do %>
      <%= palette %>
      <%= dropzone trash: true, klass: 'md:pt-48 md:pb-60 md:h-full md:overflow-x-auto', no_wire: true do %>
        <%= menu do %>
          <%= copy_link %>
          <%= clear_circuit %>
        <% end %>
        <%= circuit_view circuit: @circuit %>
      <% end %>
      <%= circle_notation nqubit: @circuit.nqubit %>
      <%= render RunCircuitButtonComponent.new %>
    <% end %>
  <% end %>
<% end %>
