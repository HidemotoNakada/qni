<% content_for :head do %>
  <%= javascript_pack_tag 'service_worker', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= container do %>
  <%= editor do %>
    <%= component 'simulator', nqubit: @circuit.nqubit do %>
      <%= palette %>
      <%= dropzone trash: true, klass: 'md:pt-48 md:pb-60 md:h-full md:overflow-x-auto', no_wire: true do %>
        <div class="flex flex-row fixed z-50 top-0 right-0 mr-5 md:mr-4 mt-3 md:mt-4">
          <button class="inline-flex flex-row items-center border-transparent px-2 text-eel bg-snow rounded opacity-75 hover:opacity-100 focus:outline-none"
                  data-controller="clipboard"
                  data-action="click->clipboard#copyCurrentUrlToClipboard">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <span class="pl-1">Copy link</span>
          </button>
          <button class="hidden md:flex flex-row cursor-pointer px-2 ml-8 text-cardinal bg-snow rounded opacity-75 hover:opacity-100 focus:outline-none"
                  data-action="click->editor#clear">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            <span class="pl-1">Clear circuit</span>
          </button>
        </div>
        <%= circuit_view circuit: @circuit %>
      <% end %>
      <%= circle_notation nqubit: @circuit.nqubit %>
      <%= component 'run_button' %>
    <% end %>
  <% end %>
<% end %>
