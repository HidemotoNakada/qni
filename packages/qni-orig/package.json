{
  "name": "qni",
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "{app,lib,test}/**/*.rb": [
      "bundle exec rubocop --safe-auto-correct"
    ],
    "Gemfile": [
      "bundle exec rubocop --safe-auto-correct"
    ],
    "app/**/*.html.erb": [
      "bundle exec erblint"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.scss": [
      "bin/bundle exec scss-lint",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write --prose-wrap always"
    ]
  },
  "scripts": {
    "test": "karma start",
    "test:watch": "yarn test --auto-watch --no-single-run",
    "build:doc": "typedoc --out doc/api --name Qni --excludePrivate --excludeProtected --hideGenerator --tsconfig tsconfig.typedoc.json app/javascript/",
    "prepare": "husky install"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "printWidth": 80
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-proposal-throw-expressions": "~7.14",
    "@babel/preset-typescript": "~7.14",
    "@github/catalyst": "^1.1.3",
    "@github/jtml": "^0.4.0",
    "@interactjs/actions": "^1.10.11",
    "@interactjs/auto-start": "^1.10.11",
    "@interactjs/dev-tools": "^1.10.11",
    "@interactjs/interact": "^1.10.11",
    "@interactjs/types": "^1.10.11",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "~5.4",
    "@tailwindcss/forms": "^0.3.3",
    "autoprefixer": "^9",
    "emergence.js": "^1.1.2",
    "fraction.js": "^4.1.1",
    "magic-grid": "^3.2.4",
    "nouislider": "^15.2.0",
    "postcss": "~7.0",
    "sass-loader": "^10",
    "stimulus": "~2.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "tippy.js": "^6.2.4",
    "turbolinks": "^5.2.0",
    "typescript": "~4.3",
    "vanilla-lazyload": "^17.1.0",
    "webpack-cli": "3.3.12",
    "webpacker-pwa": "^0.1.2"
  },
  "version": "0.0.23",
  "devDependencies": {
    "@types/qunit": "~2.11",
    "@types/typpy": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "~4.28",
    "@typescript-eslint/parser": "~4.28",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "~3.3",
    "eslint": "~7.31",
    "eslint-config-prettier": "~8.3",
    "eslint-plugin-custom-elements": "^0.0.2",
    "eslint-plugin-github": "^4.1.5",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": ">=6",
    "karma": "~6.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-qunit": "^4.1.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^4.0.2",
    "lint-staged": "~10.5",
    "prettier": "^2.1.2",
    "qunit": "~2.16",
    "typedoc": "~0.21",
    "webpack-dev-server": "~3.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "description": "This README would normally document whatever steps are necessary to get the application up and running.",
  "main": "dist/index.js",
  "directories": {
    "doc": "doc",
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasuhito/qni.git"
  },
  "keywords": [
    "quantum",
    "simulator",
    "circuit",
    "components",
    "quantum-computing",
    "quantum-computer-simulator",
    "quantum-algorithms"
  ],
  "author": "Yasuhito Takamiya <yasuhito@hey.com> (https://github.com/yasuhito)",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/yasuhito/qni/issues"
  },
  "homepage": "https://github.com/yasuhito/qni"
}
