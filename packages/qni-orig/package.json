{
  "name": "qni",
  "private": true,
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "{app,lib,test}/**/*.rb": [
      "bundle exec rubocop --safe-auto-correct"
    ],
    "Gemfile": [
      "bundle exec rubocop --safe-auto-correct"
    ],
    "app/**/*.html.erb": [
      "bundle exec erblint"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.scss": [
      "bin/bundle exec scss-lint",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write --prose-wrap always"
    ]
  },
  "scripts": {
    "test": "karma start",
    "test:watch": "yarn test --auto-watch --no-single-run",
    "build:doc": "typedoc --out doc/api --name Qni --excludePrivate --excludeProtected --hideGenerator --tsconfig tsconfig.typedoc.json app/javascript/",
    "prepare": "husky install"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "printWidth": 80
  },
  "dependencies": {
    "@babel/plugin-proposal-throw-expressions": "~7.12",
    "@babel/preset-typescript": "~7.13",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "~5.4",
    "animate.css": "^4.1.1",
    "autoprefixer": "^9",
    "interactjs": "~1.10",
    "magic-grid": "^3.2.4",
    "mathjs": "~9.4",
    "postcss": "^7",
    "sass-loader": "^10",
    "stimulus": "~2.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "tippy.js": "^6.2.4",
    "ts-mixer": "~5.4",
    "turbolinks": "^5.2.0",
    "typescript": "~4.2",
    "vanilla-lazyload": "^17.1.0",
    "webpack-cli": "3.3.12",
    "webpacker-pwa": "^0.1.2"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@types/mathjs": "~9.4",
    "@types/qunit": "~2.11",
    "@types/typpy": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "~4.24",
    "@typescript-eslint/parser": "~4.24",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "~3.3",
    "eslint": "~7.26",
    "eslint-config-prettier": "~8.3",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": ">=6",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-qunit": "^4.1.1",
    "karma-webpack": "^4.0.2",
    "lint-staged": "~10.5",
    "prettier": "^2.1.2",
    "qunit": "~2.15",
    "typedoc": "~0.20",
    "webpack-dev-server": "^3.10.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
