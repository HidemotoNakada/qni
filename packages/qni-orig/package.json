{
  "name": "qni",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "{app,lib,test}/**/*.rb": [
      "bundle exec rubocop --safe-auto-correct"
    ],
    "Gemfile": [
      "bundle exec rubocop --safe-auto-correct"
    ],
    "app/**/*.html.erb": [
      "bin/bundle exec erblint"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write --prose-wrap always"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 80
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "~5.1",
    "@tailwindcss/ui": "~0.3",
    "balloon-css": "^1.0.4",
    "highlight.js": "~10.0",
    "shufflejs": "^5.2.3",
    "stimulus": "^1.1.1",
    "tailwindcss": "^1.2.0",
    "turbolinks": "^5.2.0"
  },
  "version": "0.1.0",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "~3.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "webpack-dev-server": "^3.10.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
