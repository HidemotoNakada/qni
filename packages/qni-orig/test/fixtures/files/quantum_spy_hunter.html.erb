<%= circuit nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x2' %>
      <%= qubit_label '0x4' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'get two random bits' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= measure flag: 'alice_h' %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= measure flag: 'alice_v' %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'set value' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= not_gate bit: 0, if: 'alice_v' %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'apply H' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0, if: 'alice_h' %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone output_wire_active: false do %>
        <%= swap_gate bit: 0, targets: [0, 1], controls: [] %>
      <% end %>
      <%= dropzone input_wire_active: false do %>
        <%= swap_gate bit: 1, targets: [0, 1], controls: [] %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'ðŸ•¶spy' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 1 %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= measure flag: 'eve_v' %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= not_gate bit: 1, if: 'eve_v' %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 1 %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 2 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= measure flag: 'bob_h' %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone output_wire_active: false do %>
        <%= swap_gate bit: 1, targets: [1, 2], controls: [] %>
      <% end %>
      <%= dropzone input_wire_active: false do %>
        <%= swap_gate bit: 2, targets: [1, 2], controls: [] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'apply H' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 2, if: 'bob_h' %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'readout' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= measure %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
