<%= component 'circuit', nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group do %>
      <%= register_label label: '👩Alice' %>
      <%= register_label label: '😈Eve' %>
      <%= register_label label: '👦🏻Bob' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'get two random bits' do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :readout, set: 'alice_h' %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :readout, set: 'alice_v' %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'set value' do %>
    <%= component 'circuit/step' do %>
      <%= component 'not_gate', if: 'alice_v' %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'apply H' do %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate', disabled: true, if: 'alice_h' %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'down_gate' %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: '🕶spy' do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'hadamard_gate' %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'rw', type: :readout, set: 'eve_v' %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'not_gate', if: 'eve_v' %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'hadamard_gate' %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire %>
      <%= component 'rw', type: :readout, set: 'bob_h' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'down_gate' %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'apply H' do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= component 'hadamard_gate', disabled: true, if: 'bob_h' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'readout' do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= component 'rw', type: :readout %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
<% end %>
