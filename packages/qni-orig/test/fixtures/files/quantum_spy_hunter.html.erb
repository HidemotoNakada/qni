<%= circuit nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group do %>
      <%= register_label '👩Alice' %>
      <%= register_label '😈Eve' %>
      <%= register_label '👦🏻Bob' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'get two random bits' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable readout: true do %>
          <%= readout set: 'alice_h' %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable readout: true do %>
          <%= readout set: 'alice_v' %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'set value' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 0, if: 'alice_v' %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'apply H' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate if: 'alice_h' %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone output_wire_active: false do %>
        <%= draggable do %>
          <%= swap_gate bit: 0, targets: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone input_wire_active: false do %>
        <%= draggable do %>
          <%= swap_gate bit: 1, targets: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: '🕶spy' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable readout: true do %>
          <%= readout set: 'eve_v' %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 1, if: 'eve_v' %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable readout: true do %>
          <%= readout set: 'bob_h' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone output_wire_active: false do %>
        <%= draggable do %>
          <%= swap_gate bit: 1, targets: [1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone input_wire_active: false do %>
        <%= draggable do %>
          <%= swap_gate bit: 2, targets: [1, 2] %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'apply H' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate if: 'bob_h' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'readout' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable readout: true do %>
          <%= readout %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
