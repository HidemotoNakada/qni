<%= component 'circuit', nqubit: 4 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group_span rows: 4 do %>
      <%= register_label_span label: 'a', span: 4, start: 1 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x2' %>
      <%= component 'qubit_label', label: '0x4' %>
      <%= component 'qubit_label', label: '0x8' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prepare' do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 1 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'phase_gate', theta: 'Ï€/4' %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'increment' do %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [3], bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'not_gate', top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'control_dot', targets: [2], top: true, bottom: true %>
      <%= component 'not_gate', top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [1], bottom: true %>
      <%= component 'not_gate', controls: [0], top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'decrement' do %>
    <%= component 'circuit/step' do %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [1], bottom: true %>
      <%= component 'not_gate', controls: [0], top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'control_dot', targets: [2], top: true, bottom: true %>
      <%= component 'not_gate', top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [3], bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'not_gate', top: true %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
<% end %>
