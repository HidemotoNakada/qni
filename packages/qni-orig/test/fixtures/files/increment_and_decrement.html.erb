<%= circuit nqubit: 4 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group_span rows: 4 do %>
      <%= register_label_span label: 'a', span: 4, start: 1 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x2' %>
      <%= qubit_label '0x4' %>
      <%= qubit_label '0x8' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prepare' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 1 %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 2, phi: 'Ï€/4' %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'increment' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [3], controls: [0, 1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 1, targets: [3], controls: [0, 1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 2, targets: [3], controls: [0, 1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 3, controls: [0, 1, 2] %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [2], controls: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 1, targets: [2], controls: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 2, controls: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [1], controls: [0] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 1, controls: [0], targets: [1] %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 0 %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'decrement' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 0 %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [1], controls: [0] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 1, controls: [0], targets: [1] %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [2], controls: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 1, targets: [2], controls: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 2, controls: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [3], controls: [0, 1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 1, targets: [3], controls: [0, 1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 2, targets: [3], controls: [0, 1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 3, controls: [0, 1, 2] %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
