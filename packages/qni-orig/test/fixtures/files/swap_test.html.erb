<%= component 'circuit', nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group do %>
      <%= register_label label: 'Input 1' %>
      <%= register_label label: 'Input 2' %>
      <%= register_label label: 'Output' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'initialize' do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'swap test' do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'down_gate' %>
      <%= component 'up_gate', bottom: true %>
      <%= component 'control_dot', targets: [0, 1], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'not_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'rw', type: :readout %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire active: false %>
    <% end %>
  <% end %>
<% end %>
