<%= circuit nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group do %>
      <%= register_label 'Input 1' %>
      <%= register_label 'Input 2' %>
      <%= register_label 'Output' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'initialize' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'swap test' do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= swap_gate bit: 0, targets: [0, 1], controls: [2] %>
      <% end %>
      <%= dropzone do %>
        <%= swap_gate bit: 1, targets: [0, 1], controls: [2] %>
      <% end %>
      <%= dropzone do %>
        <%= control_gate bit: 2, targets: [0, 1], controls: [2] %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= not_gate bit: 2 %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= readout %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
