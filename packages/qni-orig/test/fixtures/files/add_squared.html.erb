<%= circuit do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_column_span rows: 6 do %>
      <%= register_label_span label: 'a', row_span: 4 %>
      <%= register_label_span label: 'b', row_span: 2 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= qubit_label label: '0x1' %>
      <%= qubit_label label: '0x2' %>
      <%= qubit_label label: '0x4' %>
      <%= qubit_label label: '0x8' %>
      <%= qubit_label label: '0x1' %>
      <%= qubit_label label: '0x2' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prepare' do %>
    <%= circuit_column do %>
      <%= write value: 1 %>
      <%= write value: 0 %>
      <%= write value: 0 %>
      <%= write value: 0 %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= hadamard_gate %>
      <%= wire %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= phase_gate theta: 'π/4' %>
      <%= wire %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= write value: 1 %>
      <%= write value: 0 %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= hadamard_gate %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= phase_gate theta: 'π/2' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'a *= b' do %>
    <%= circuit_column do %>
      <%= control_dot bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= control_dot top: true %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= control_dot bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= control_dot bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= not_gate bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= control_dot bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= control_dot bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= not_gate bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= control_dot bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= control_dot bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= not_gate bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= control_dot bottom: true %>
      <%= not_gate top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= not_gate bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
<% end %>
