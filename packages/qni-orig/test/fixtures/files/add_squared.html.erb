<%= component 'circuit', nqubit: 6 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group_span rows: 6 do %>
      <%= register_label_span label: 'a', span: 4, start: 3 %>
      <%= register_label_span label: 'b', span: 2, start: 1 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x2' %>
      <%= component 'qubit_label', label: '0x4' %>
      <%= component 'qubit_label', label: '0x8' %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x2' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prepare' do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 1 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'phase_gate', theta: 'π/4' %>
      <%= wire %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'rw', type: :write, value: 1 %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'phase_gate', theta: 'π/2' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'a *= b' do %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [3], bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'control_dot', targets: [2], top: true, bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [2], top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [1], bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [1], top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'not_gate', controls: [4], bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [0], top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'control_dot', targets: [3], bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [2], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'not_gate', controls: [5], bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [1], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'control_dot', targets: [3], bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [2], top: true, bottom: true %>
      <%= component 'control_dot', targets: [2], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'not_gate', bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [1], top: true, bottom: true %>
      <%= component 'control_dot', targets: [1], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'control_dot', targets: [3], bottom: true %>
      <%= component 'not_gate', top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [3], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'not_gate', controls: [5], bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'control_dot', targets: [2], top: true %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
<% end %>
