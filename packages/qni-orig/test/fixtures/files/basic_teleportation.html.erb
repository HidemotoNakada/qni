<%= circuit nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x2' %>
      <%= qubit_label '0x4' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'entangle' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 1 %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= control_gate bit: 1, targets: [2], controls: [1] %>
      <% end %>
      <%= dropzone do %>
        <%= not_gate bit: 2, controls: [1] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prep payload' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= rx_gate bit: 0, theta: '11Ï€/8' %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= bloch_display bit: 0 %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'send' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= control_gate bit: 0, targets: [1], controls: [0] %>
      <% end %>
      <%= dropzone do %>
        <%= not_gate bit: 1, controls: [0] %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0 %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= measure %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= measure %>
      <% end %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'receive' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false do %>
        <%= control_gate bit: 1, targets: [2], controls: [1], wire_active: false %>
      <% end %>
      <%= dropzone do %>
        <%= not_gate bit: 2, controls: [1] %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false do %>
        <%= control_gate bit: 0, targets: [0, 2], controls: [0, 2], wire_active: false %>
      <% end %>
      <%= dropzone wire_top: true, wire_bottom: true, wire_active: false %>
      <%= dropzone do %>
        <%= control_gate bit: 2, targets: [0, 2], controls: [0, 2] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'verify' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= bloch_display bit: 2 %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= measure %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
