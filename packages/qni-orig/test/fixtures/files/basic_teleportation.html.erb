<%= circuit do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_column do %>
      <%= register_label label: '👩Alice' %>
      <%= register_label label: 'ep' %>
      <%= register_label label: '👦🏻Bob' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= qubit_label label: '0x1' %>
      <%= qubit_label label: '0x1' %>
      <%= qubit_label label: '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= write value: 0 %>
      <%= write value: 0 %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'entangle' do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= hadamard_gate %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= control_dot bottom: true %>
      <%= not_gate top: true %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= write value: 0 %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prep payload' do %>
    <%= circuit_column do %>
      <%= hadamard_gate %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= phase_gate theta: 'π/4' %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= hadamard_gate %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'send' do %>
    <%= circuit_column do %>
      <%= control_dot bottom: true %>
      <%= not_gate top: true %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= hadamard_gate %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= readout value: 1 %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= readout value: 0 %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'receive' do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= control_dot bottom: true, wire_active: false %>
      <%= not_gate top: true %>
    <% end %>
    <%= circuit_column do %>
      <%= control_dot bottom: true, wire_active: false %>
      <%= wire active: false, top: true, bottom: true %>
      <%= control_dot top: true %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'verify' do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= hadamard_gate %>
    <% end %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= phase_gate theta: '-π/4' %>
    <% end %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= hadamard_gate %>
    <% end %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= readout value: 0 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_column do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
<% end %>
