<%= circuit nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group do %>
      <%= register_label '👩Alice' %>
      <%= register_label 'ep' %>
      <%= register_label '👦🏻Bob' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'entangle' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= control_gate bit: 1, targets: [2], controls: [1] %>
      <% end %>
      <%= dropzone do %>
        <%= not_gate bit: 2, controls: [1], targets: [2] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prep payload' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= phase_gate bit: 0, phi: 'π/4' %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'send' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= control_gate bit: 0, targets: [1], controls: [0] %>
      <% end %>
      <%= dropzone do %>
        <%= not_gate bit: 1, controls: [0], targets: [1] %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= readout %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= readout %>
      <% end %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'receive' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false do %>
        <%= control_gate bit: 1, targets: [2], controls: [1] %>
      <% end %>
      <%= dropzone do %>
        <%= not_gate bit: 2, controls: [1], targets: [2] %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false do %>
        <%= control_gate bit: 0, targets: [0, 2], controls: [0, 2] %>
      <% end %>
      <%= dropzone wire_top: true, wire_bottom: true, wire_active: false %>
      <%= dropzone do %>
        <%= control_gate bit: 2, targets: [0, 2], controls: [0, 2] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'verify' do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= phase_gate bit: 2, phi: '-π/4' %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= readout %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
      <%= dropzone wire_active: false %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
