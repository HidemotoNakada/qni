<%= component 'circuit', nqubit: 3 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group do %>
      <%= register_label label: '👩Alice' %>
      <%= register_label label: 'ep' %>
      <%= register_label label: '👦🏻Bob' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'entangle' do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'not_gate', controls: [1], top: true %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'prep payload' do %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'phase_gate', theta: 'π/4' %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'send' do %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [1], bottom: true %>
      <%= component 'not_gate', controls: [0], top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :readout %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'rw', type: :readout %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'receive' do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= component 'control_dot', targets: [2], bottom: true, wire_active: false %>
      <%= component 'not_gate', controls: [1], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [0, 2], bottom: true, wire_active: false %>
      <%= wire active: false, top: true, bottom: true %>
      <%= component 'control_dot', targets: [0, 2], top: true %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'verify' do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= component 'hadamard_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= component 'phase_gate', theta: '-π/4' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= component 'hadamard_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= component 'rw', type: :readout %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire active: false %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
<% end %>
