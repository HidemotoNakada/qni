<%= component 'circuit', nqubit: 5 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group_span rows: 5 do %>
      <%= register_label_span label: 'a', span: 3, start: 3 %>
      <%= register_label_span label: 'b', span: 2, start: 1 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x2' %>
      <%= component 'qubit_label', label: '0x4' %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x2' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'a=0,1,2,3' do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire active: false %>
      <%= wire active: false %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'b=1,3' do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'rw', type: :write, value: 1 %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'a-=3' do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'not_gate', controls: [1], top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [1], bottom: true %>
      <%= component 'not_gate', controls: [0], top: true %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'control_dot', targets: [2], top: true, bottom: true %>
      <%= component 'not_gate', top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'flip if (a<0 && b==1)' do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'not_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'control_dot', targets: [2, 3, 4], bottom: true %>
      <%= component 'control_dot', targets: [2, 3, 4], top: true, bottom: true %>
      <%= component 'control_dot', targets: [2, 3, 4], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'not_gate' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'a+=3' do %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'control_dot', targets: [2], top: true, bottom: true %>
      <%= component 'not_gate', top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [1], bottom: true %>
      <%= component 'not_gate', controls: [0], top: true %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'control_dot', targets: [2], bottom: true %>
      <%= component 'not_gate', controls: [1], top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
<% end %>
