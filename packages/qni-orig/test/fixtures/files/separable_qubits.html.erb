<%= circuit nqubit: 3 do %>
  <%= circuit_register_group do %>
    <%= register_label 'qubit1' %>
    <%= register_label 'qubit2' %>
    <%= register_label 'qubit3' %>
  <% end %>
  <%= circuit_step do %>
    <%= qubit_label '0x1' %>
    <%= qubit_label '0x1' %>
    <%= qubit_label '0x1' %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= write 0 %>
    <% end %>
    <%= dropzone do %>
      <%= write 0 %>
    <% end %>
    <%= dropzone do %>
      <%= write 0 %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= hadamard_gate %>
    <% end %>
    <%= dropzone %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= hadamard_gate %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
