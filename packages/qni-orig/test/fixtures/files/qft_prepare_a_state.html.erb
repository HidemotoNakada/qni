<%= circuit nqubit: 4 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group_span rows: 4 do %>
      <%= register_label_span label: 'qin', span: 4, start: 1 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x2' %>
      <%= qubit_label '0x4' %>
      <%= qubit_label '0x8' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'write freq' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [1, 2, 3], controls: [0] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 1, controls: [0] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 2, controls: [0] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 3, controls: [0] %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 1 %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 0, controls: [1] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 1, targets: [0], controls: [1] %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 1 %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'invQFT' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= swap_gate bit: 0, targets: [0, 3] %>
        <% end %>
      <% end %>
      <%= dropzone wire_top: true, wire_bottom: true %>
      <%= dropzone wire_top: true, wire_bottom: true %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= swap_gate bit: 3, targets: [0, 3] %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone no_wire: true do %>
        <%= draggable do %>
          <%= down_gate targets: [1] %>
        <% end %>
      <% end %>
      <%= dropzone no_wire: true do %>
        <%= draggable do %>
          <%= up_gate targets: 1 %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 0, theta: 'π/2', targets: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 1, theta: 'π/2', targets: [0, 1] %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 0, theta: 'π/4', targets: [0, 2] %>
        <% end %>
      <% end %>
      <%= dropzone wire_top: true, wire_bottom: true %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 2, theta: 'π/4', targets: [0, 2] %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 0, theta: 'π/8', targets: [0, 3] %>
        <% end %>
      <% end %>
      <%= dropzone wire_top: true, wire_bottom: true %>
      <%= dropzone wire_top: true, wire_bottom: true %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 3, theta: 'π/8', targets: [0, 3] %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 1, theta: 'π/2', targets: [1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 2, theta: 'π/2', targets: [1, 2] %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 1, theta: 'π/4', targets: [1, 3] %>
        <% end %>
      <% end %>
      <%= dropzone wire_top: true, wire_bottom: true %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 3, theta: 'π/4', targets: [1, 3] %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 2, theta: 'π/2', targets: [2, 3] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= phase_gate bit: 3, theta: 'π/2', targets: [2, 3] %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
