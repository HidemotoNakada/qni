<%= component 'circuit', nqubit: 4 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group_span rows: 4 do %>
      <%= register_label_span label: 'qin', span: 4, start: 1 %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
      <%= component 'qubit_label', label: '0x2' %>
      <%= component 'qubit_label', label: '0x4' %>
      <%= component 'qubit_label', label: '0x8' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'write freq' do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'control_dot', targets: [1, 2, 3], bottom: true %>
      <%= component 'not_gate', controls: [0], top: true, bottom: true %>
      <%= component 'not_gate', controls: [0], top: true, bottom: true %>
      <%= component 'not_gate', controls: [0], top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'not_gate', controls: [1], bottom: true %>
      <%= component 'control_dot', targets: [0], top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'not_gate' %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'invQFT' do %>
    <%= component 'circuit/step' do %>
      <%= swap_gate bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= swap_gate top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'down_gate' %>
      <%= component 'up_gate' %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'phase_gate', theta: 'π/2', bottom: true %>
      <%= component 'phase_gate', theta: 'π/2', top: true %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'phase_gate', theta: 'π/4', bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'phase_gate', theta: 'π/4', top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'phase_gate', theta: 'π/8', bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'phase_gate', theta: 'π/8', top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'phase_gate', theta: 'π/2', bottom: true %>
      <%= component 'phase_gate', theta: 'π/2', top: true %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= component 'phase_gate', theta: 'π/4', bottom: true %>
      <%= wire top: true, bottom: true %>
      <%= component 'phase_gate', theta: 'π/4', top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
      <%= wire %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= component 'phase_gate', theta: 'π/2', bottom: true %>
      <%= component 'phase_gate', theta: 'π/2', top: true %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= component 'hadamard_gate' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
      <%= wire %>
    <% end %>
  <% end %>
<% end %>
