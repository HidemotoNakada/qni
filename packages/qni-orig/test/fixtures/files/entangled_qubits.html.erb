<%= circuit nqubit: 2 do %>
  <%= circuit_block_divider do %>
    <%= circuit_register_group do %>
      <%= register_label 'a' %>
      <%= register_label 'b' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
      <%= qubit_label '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'entangle' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable write: true do %>
          <%= write 0 %>
        <% end %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= hadamard_gate %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= control_gate bit: 0, targets: [1], controls: [0] %>
        <% end %>
      <% end %>
      <%= dropzone do %>
        <%= draggable do %>
          <%= not_gate bit: 1, controls: [0] %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= draggable readout: true do %>
          <%= readout %>
        <% end %>
      <% end %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone wire_active: false %>
      <%= dropzone do %>
        <%= draggable readout: true do %>
          <%= readout %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
