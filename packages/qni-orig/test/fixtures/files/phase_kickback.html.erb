<%= circuit nqubit: 3 do %>
  <%= circuit_register_group_span rows: 3 do %>
    <%= register_label_span label: 'Register 1', span: 2, start: 2 %>
    <%= register_label_span label: 'Register 2', span: 1, start: 1 %>
  <% end %>
  <%= circuit_step do %>
    <%= qubit_label '0x1' %>
    <%= qubit_label '0x2' %>
    <%= qubit_label '0x1' %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
    <%= dropzone wire_active: false %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 1 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
    <%= dropzone %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 0, phi: 'π/4', targets: [0, 2] %>
      <% end %>
    <% end %>
    <%= dropzone wire_top: true, wire_bottom: true %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 2, phi: 'π/4', targets: [0, 2] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 1, phi: 'π/2', targets: [1, 2] %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= phase_gate bit: 2, phi: 'π/2', targets: [1, 2] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
