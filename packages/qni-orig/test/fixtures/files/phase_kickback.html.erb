<%= circuit do %>
  <%= circuit_register_column_span rows: 3 do %>
    <%= register_label_span label: 'Register 1', row_span: 2 %>
    <%= register_label_span label: 'Register 2', row_span: 1 %>
  <% end %>
  <%= circuit_column do %>
    <%= qubit_label label: '0x1' %>
    <%= qubit_label label: '0x2' %>
    <%= qubit_label label: '0x2' %>
  <% end %>
  <%= circuit_column do %>
    <%= write value: 0 %>
    <%= write value: 0 %>
    <%= wire active: false %>
  <% end %>
  <%= circuit_column do %>
    <%= wire %>
    <%= wire %>
    <%= write value: 1 %>
  <% end %>
  <%= circuit_column do %>
    <%= hadamard_gate %>
    <%= hadamard_gate %>
    <%= wire %>
  <% end %>
  <%= circuit_column do %>
    <%= phase_gate theta: 'π/4', bottom: true %>
    <%= wire top: true, bottom: true %>
    <%= phase_gate theta: 'π/4', top: true %>
  <% end %>
  <%= circuit_column do %>
    <%= wire %>
    <%= phase_gate theta: 'π/2', bottom: true %>
    <%= phase_gate theta: 'π/2', top: true %>
  <% end %>
<% end %>
