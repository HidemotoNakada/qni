<%= component 'circuit', nqubit: 1 do %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'qubit_label', label: '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= component 'rw', type: :write, value: 0 %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'RNOT' do %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'phase_gate', theta: '-π/2' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'RNOT' do %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'phase_gate', theta: '-π/2' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'hadamard_gate' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'Built-in RNOT' do %>
    <%= component 'circuit/step' do %>
      <%= component 'root_not_gate' %>
    <% end %>
    <%= component 'circuit/step' do %>
      <%= component 'root_not_gate' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= component 'circuit/step' do %>
      <%= wire %>
    <% end %>
  <% end %>
<% end %>
