<%= circuit nqubit: 1 do %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= qubit_label '0x1' %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'RNOT' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0 %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= phase_gate bit: 0, phi: '-π/2' %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'RNOT' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0 %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= phase_gate bit: 0, phi: '-π/2' %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= hadamard_gate bit: 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_block_divider do %>
    <%= circuit_step do %>
      <%= dropzone %>
    <% end %>
  <% end %>
  <%= circuit_block label: 'Built-in RNOT' do %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= root_not_gate bit: 0 %>
      <% end %>
    <% end %>
    <%= circuit_step do %>
      <%= dropzone do %>
        <%= root_not_gate bit: 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
  <% end %>
<% end %>
