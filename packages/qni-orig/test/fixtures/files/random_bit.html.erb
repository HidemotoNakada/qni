<%= circuit nqubit: 1 do %>
  <%= circuit_step do %>
    <%= qubit_label '0x1' %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= write 0 %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= hadamard_gate %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= readout %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
  <% end %>
<% end %>
