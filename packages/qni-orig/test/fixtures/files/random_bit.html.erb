<%= circuit nqubit: 1 do %>
  <%= circuit_step do %>
    <%= qubit_label '0x1' %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= hadamard_gate %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable readout: true do %>
        <%= readout %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
  <% end %>
<% end %>
