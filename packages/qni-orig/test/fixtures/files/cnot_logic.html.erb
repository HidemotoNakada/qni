<%= circuit nqubit: 3 do %>
  <%= circuit_register_group do %>
    <%= register_label 'a' %>
    <%= register_label 'b' %>
    <%= register_label 'c' %>
  <% end %>
  <%= circuit_step do %>
    <%= qubit_label '0x1' %>
    <%= qubit_label '0x1' %>
    <%= qubit_label '0x1' %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= not_gate bit: 2 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= draggable readout: true do %>
        <%= readout %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 1 %>
      <% end %>
    <% end %>
    <%= dropzone wire_active: false %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= control_gate bit: 1, targets: [2], controls: [1] %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= not_gate bit: 2, controls: [1] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= draggable readout: true do %>
        <%= readout %>
      <% end %>
    <% end %>
    <%= dropzone %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= draggable readout: true do %>
        <%= readout %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 1 %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 1 %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable write: true do %>
        <%= write 0 %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= control_gate bit: 0, targets: [2], controls: [0, 1] %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= control_gate bit: 1, targets: [2], controls: [0, 1] %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable do %>
        <%= not_gate bit: 2, controls: [0, 1] %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= draggable readout: true do %>
        <%= readout %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable readout: true do %>
        <%= readout %>
      <% end %>
    <% end %>
    <%= dropzone do %>
      <%= draggable readout: true do %>
        <%= readout %>
      <% end %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
