<%= circuit nqubit: 3 do %>
  <%= circuit_step do %>
    <%= qubit_label '0x1' %>
    <%= qubit_label '0x2' %>
    <%= qubit_label '0x4' %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= write 0 %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= not_gate bit: 2 %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= measure %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= write 1 %>
    <% end %>
    <%= dropzone wire_active: false %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone %>
    <%= dropzone do %>
      <%= write 0 %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= control_gate bit: 1, targets: [2], controls: [1] %>
    <% end %>
    <%= dropzone do %>
      <%= not_gate bit: 2, controls: [1] %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= measure %>
    <% end %>
    <%= dropzone %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone wire_active: false %>
    <%= dropzone wire_active: false %>
    <%= dropzone do %>
      <%= measure %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= write 1 %>
    <% end %>
    <%= dropzone do %>
      <%= write 1 %>
    <% end %>
    <%= dropzone do %>
      <%= write 0 %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= control_gate bit: 0, targets: [2], controls: [0, 1] %>
    <% end %>
    <%= dropzone do %>
      <%= control_gate bit: 1, targets: [2], controls: [0, 1] %>
    <% end %>
    <%= dropzone do %>
      <%= not_gate bit: 2, controls: [0, 1] %>
    <% end %>
  <% end %>
  <%= circuit_step do %>
    <%= dropzone do %>
      <%= measure %>
    <% end %>
    <%= dropzone do %>
      <%= measure %>
    <% end %>
    <%= dropzone do %>
      <%= measure %>
    <% end %>
  <% end %>
  <%= circuit_step shadow_source: true do %>
    <%= dropzone %>
    <%= dropzone %>
    <%= dropzone %>
  <% end %>
<% end %>
