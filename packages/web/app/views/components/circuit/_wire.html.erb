<% top = local_assigns[:top] %>
<% bottom = local_assigns[:bottom] %>
<% klass = local_assigns[:class] %>
<% light = local_assigns[:light] %>
<% placeholder = local_assigns[:placeholder] %>

<div class="<%= class_string 'wire', 'wire--light' => light, 'wire--placeholder' => placeholder, klass => klass %>">
  <div class="wire__line"></div>

  <% if top %>
    <div class="wire__top"></div>
  <% end %>

  <% if bottom %>
    <div class="wire__bottom"></div>
  <% end %>
</div>
