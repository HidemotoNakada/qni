<% label = local_assigns.fetch(:label) %>
<% body = yield.presence || raise('body is a mandatory') %>

<div class="circuit-block relative flex flex-col my-6">
  <div class="absolute flex justify-center w-full top-0 whitespace-no-wrap text-indigo-700 -mt-6">
    <span><%= label %></span>
  </div>

  <div class="flex flex-row py-8 bg-gray-100 border-t-2 border-b-2 border-indigo-200">
    <%= body %>
  </div>

  <div class="absolute flex justify-center w-full bottom-0 whitespace-no-wrap text-indigo-700 -mb-6">
    <span><%= label %></span>
  </div>
</div>
