<%= form_with(model: code, local: true) do |form| %>
  <div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">

    <% if code.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(code.errors.count, 'error') %> prohibited this code from being saved:</h2>

        <ul>
          <% code.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="sm:col-span-4">
      <%= form.label :title, class: 'block text-sm font-medium leading-5 text-gray-700' %>
      <div class="mt-1 relative rounded-md shadow-sm">
        <%= form.text_field :title, class: 'form-input block w-full sm:text-sm sm:leading-5' %>
      </div>
    </div>

    <div class="sm:col-span-6">
      <%= form.label :body, class: 'block text-sm font-medium leading-5 text-gray-700' %>
      <div class="mt-1 rounded-md shadow-sm">
        <%= form.text_area :body, rows: 10, class: 'form-textarea block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5' %>
      </div>
    </div>
  </div>

  <div class="mt-8 border-t border-gray-200 pt-5">
    <div class="flex justify-end">
      <span class="button button--white">
        <%= link_to 'Back', codes_path %>
      </span>

      <span class="button button--primary ml-3">
        <%= form.submit %>
      </span>
    </div>
  </div>
<% end %>
